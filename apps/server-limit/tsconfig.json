{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "baseUrl": "src",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "outDir": "build",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "composite": true,
      "declaration": true,
      "noUnusedLocals": true,
      "paths": {
        "@trpc": ["./src/trpc/trpc.ts"],
      },
    },
    "exclude": ["node_modules", "jest.config.ts", "build"]
  }
  